%h2
  Firmy klienta 
  %i= "#{company_owner.full_name}"
%p
  = link_to 'Wróć', client_path(@client), class: 'btn btn-default'
  = link_to 'Dodaj firmę', new_client_company_path(@client), class: 'btn btn-success'

%table.table.table-stripped
  %tr
    %th id
    %th Nazwa
    %th Data zakończenia umowy
    %th Więcej
  - @companies.each do |company|
    %tr
      %td= company.id
      %td= company.name
      %td= company.end_date.to_date
      %td= link_to content_tag(:span, '', class: 'glyphicon glyphicon-list-alt' ), client_company_path(company_owner.id, company)
