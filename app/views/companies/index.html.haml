%h2= "Firmy klienta #{company_owner.full_name}"

%table.table.table-stripped
  %tr
    %th id
    %th Nazwa
    %th Data zakończenia umowy
    %th Więcej
  - @companies.each do |company|
    %tr
      %td= company.id
      %td= company.name
      %td= company.end_date
      %td= link_to content_tag(:span, class: 'glyphicon glyphicon-list-alt' ), client_company_path(company_owner.id, company)
