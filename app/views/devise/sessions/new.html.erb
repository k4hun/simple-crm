<h2>Zaloguj się</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, label: 'Email' %>
    <%= f.input :password, required: false, label: 'Hasło' %>
    <%= f.input :remember_me, label: 'Zapamiętaj mnie', as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Zaloguj" %>
  </div>
<% end %>