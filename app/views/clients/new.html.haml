%h2 Dodaj nowego klienta

= simple_form_for @client do |c|
	= c.input :firstname, label: 'Imię'
	= c.input :lastname, label: 'Nazwisko'
	= c.input :nip, label: 'NIP'
	= c.simple_fields_for :address, html: { class: 'form-horizontal' } do |addr|
		= addr.input :street, label: 'Ulica'
		= addr.input :zip_code, label: 'Kod pocztowy'
		= addr.input :city, label: 'Miasto'
		= addr.input :voivodeship, collection: 1..10, label: 'Województwo'
	= c.submit 'Dodaj klienta'
	= link_to 'Wróć', clients_path